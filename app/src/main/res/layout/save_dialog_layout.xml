<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/save_dialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/screen_border_margin">

    <TextView
        android:id="@+id/textGiveEmployee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/enter_employee_name" />

    <EditText
        android:id="@+id/inputEmployeeName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textGiveEmployee"
        android:layout_marginTop="@dimen/dialog_margin_top"
        android:hint="@string/hint_employee_name"
        android:imeOptions="actionDone"
        android:importantForAutofill="no"
        android:inputType="textPersonName" />

</RelativeLayout>